<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Upcoming_Programs">

    <ImageView
        android:id="@+id/iv_Banner"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:src="@drawable/siyakhulabanner"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
        android:id="@+id/iv_FirstThousandYears"
        android:layout_width="97dp"
        android:layout_height="89dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/firstgreen"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="153dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/returnBTN"
            android:layout_width="56dp"
            android:layout_height="53dp"
            android:backgroundTint="#90DB82"
            android:onClick="returnClick"
            android:text="X"
            android:layout_marginLeft="150dp"
            android:textAlignment="textEnd"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="154dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="194dp"
        android:layout_height="27dp"
        android:text="First Thousand Days"
        android:textColor="#90DB82"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="242dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="We provide a biopsychosocial support program to caregivers and infants. This program focuses on the first thousand days of a child’s life and their road to health as well as providing support to the primary caregiver. The first Thousand Days program also has a specialized focus on fathers, in partnership with Sikunye."
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="154dp"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/iv_FamilySupport"
        android:layout_width="103dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/familygreen"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="415dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView2Heading"
        android:layout_width="225dp"
        android:layout_height="27dp"
        android:text="Family Support Program"
        android:textColor="#90DB82"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="520dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="We provide a biopsychosocial support program to caregivers and infants. This program focuses on the first thousand days of a child’s life and their road to health as well as providing support to the primary caregiver. The first Thousand Days program also has a specialized focus on fathers, in partnership with Sikunye."
        android:textSize="15sp"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteY="559dp"
        tools:ignore="MissingConstraints"/>


</LinearLayout>
